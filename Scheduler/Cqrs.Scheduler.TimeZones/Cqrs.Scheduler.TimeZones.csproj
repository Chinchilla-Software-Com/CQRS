<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFrameworks>netcoreapp3.1;net472</TargetFrameworks>
		<RootNamespace>Cqrs.Scheduler.TimeZones</RootNamespace>
		<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
		<DebugType>full</DebugType>
		<DebugSymbols>true</DebugSymbols>
		<PlatformTarget>AnyCPU</PlatformTarget>
	</PropertyGroup>

	<PropertyGroup>
		<PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
		<ApplicationIcon>Cqrs.Scheduler.TimeZones.ico</ApplicationIcon>
		<StartupObject>Cqrs.Scheduler.TimeZones.TimeZoneWebJob</StartupObject>
		<IsPackable>true</IsPackable>
	</PropertyGroup>

	<PropertyGroup Condition=" '$(TargetFramework)' == 'net472' ">
		<DefineConstants>NET472</DefineConstants>
	</PropertyGroup>

	<ItemGroup Condition=" '$(TargetFramework)' == 'netcoreapp3.1' ">
	</ItemGroup>

	<ItemGroup Condition=" '$(TargetFramework)' == 'net472' ">
		<PackageReference Include="Ninject.Web.Common.WebHost" version="3.3.2" />
	</ItemGroup>

	<ItemGroup>
		<Compile Remove="tools\**" />
		<EmbeddedResource Remove="tools\**" />
		<EntityDeploy Remove="tools\**" />
		<None Remove="Properties\**" />
		<None Remove="tools\**" />
	</ItemGroup>

	<ItemGroup>
		<Compile Remove="Properties\AssemblyInfo.cs" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Chinchilla.Logging.Azure.Storage" Version="4.5.28" />
		<PackageReference Include="Chinchilla.Logging.Azure.ApplicationInsights" Version="4.5.28" />
		<PackageReference Include="Chinchilla.Logging.Azure" Version="4.5.28" />
		<PackageReference Include="Chinchilla.Logging" Version="4.5.28" />
		<PackageReference Include="Chinchilla.StateManagement" Version="4.2.5" />
		<PackageReference Include="Cqrs" Version="4.3.15" />
		<PackageReference Include="Cqrs.Ninject.Azure.WebJobs" Version="4.3.15" />
		<PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="3.1.7" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
		<PackageReference Include="Ninject" version="3.3.6" />
		<PackageReference Include="System.Net.NameResolution" Version="4.3.0" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Cqrs.Scheduler.Commands\Cqrs.Scheduler.Commands.csproj" />
		<ProjectReference Include="..\Cqrs.Scheduler.Events\Cqrs.Scheduler.Events.csproj" />
	</ItemGroup>

	<ItemGroup>
		<None Update="App.config">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
		<None Update="App.Prod.config">
			<DependentUpon>App.config</DependentUpon>
		</None>
		<None Update="local.settings.json">
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
		  <CopyToPublishDirectory>Never</CopyToPublishDirectory>
		</None>
	</ItemGroup>

	<ItemGroup>
		<Compile Update="CommandHandlers\PublishTimeZonesCommandHandler.partial.cs">
			<DependentUpon>CommandHandlers\PublishTimeZonesCommandHandler.cs</DependentUpon>
		</Compile>
	</ItemGroup>

</Project>